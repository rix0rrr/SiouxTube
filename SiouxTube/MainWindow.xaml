<Window x:Class="SiouxTube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SiouxTube"
        Height="350"
        Width="525"
        ResizeMode="NoResize"
        Closed="Window_Closed"
        Topmost="True">
    <Grid Background="Black">
        <WebBrowser Name="Browser" Margin="0,0,0,20"/>
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="20" Foreground="Gray" Name="ClipTitle" />
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20" Foreground="Gray" Name="ElapsedTime" />
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="Gray" Name="SenderName" />
    </Grid>
</Window>
